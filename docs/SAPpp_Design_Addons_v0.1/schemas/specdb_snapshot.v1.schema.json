{
  "$defs": {
    "ContractIR": {
      "$ref": "sappp:schema/contract_ir.v1"
    },
    "GeneratedAt": {
      "format": "date-time",
      "type": "string"
    },
    "IrAnchor": {
      "additionalProperties": false,
      "properties": {
        "block_id": {
          "pattern": "^B[0-9]+$",
          "type": "string"
        },
        "inst_id": {
          "pattern": "^I[0-9]+$",
          "type": "string"
        }
      },
      "required": [
        "block_id",
        "inst_id"
      ],
      "type": "object"
    },
    "Location": {
      "additionalProperties": false,
      "properties": {
        "col": {
          "minimum": 1,
          "type": "integer"
        },
        "file": {
          "$ref": "#/$defs/Path"
        },
        "line": {
          "minimum": 1,
          "type": "integer"
        },
        "offset": {
          "minimum": 0,
          "type": "integer"
        }
      },
      "required": [
        "file",
        "line",
        "col"
      ],
      "type": "object"
    },
    "Path": {
      "description": "Path string. Canonicalization rules are specified outside JSON Schema.",
      "minLength": 1,
      "type": "string"
    },
    "RepoIdentity": {
      "additionalProperties": false,
      "properties": {
        "content_sha256": {
          "$ref": "#/$defs/Sha256"
        },
        "path": {
          "$ref": "#/$defs/Path"
        }
      },
      "required": [
        "path",
        "content_sha256"
      ],
      "type": "object"
    },
    "Sha256": {
      "description": "Content digest in the form sha256:<64 lowercase hex>",
      "pattern": "^sha256:[0-9a-f]{64}$",
      "type": "string"
    },
    "Tool": {
      "additionalProperties": false,
      "properties": {
        "build_id": {
          "type": "string"
        },
        "name": {
          "minLength": 1,
          "type": "string"
        },
        "version": {
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ],
      "type": "object"
    },
    "VersionString": {
      "minLength": 1,
      "pattern": "^[A-Za-z0-9_.-]+$",
      "type": "string"
    }
  },
  "$id": "sappp:schema/specdb_snapshot.v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "contracts": {
      "items": {
        "$ref": "#/$defs/ContractIR"
      },
      "minItems": 0,
      "type": "array"
    },
    "generated_at": {
      "$ref": "#/$defs/GeneratedAt"
    },
    "schema_version": {
      "const": "specdb_snapshot.v1"
    },
    "specdb_digest": {
      "$ref": "#/$defs/Sha256"
    },
    "tool": {
      "$ref": "#/$defs/Tool"
    }
  },
  "required": [
    "schema_version",
    "tool",
    "generated_at",
    "contracts"
  ],
  "title": "SAP++ specdb_snapshot.v1",
  "type": "object"
}
